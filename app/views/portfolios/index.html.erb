<h1>Portfolio</h1>
<a href="portfolios/new">Create new portfolio item</a>

<%= link_to "Creat New Item", new_portfolio_path %>

<% @portfolio_items.each do |item| %>
<p><%= item.title %></p>
<p><%= item.subtitle %></p>
<p><%= item.body %></p>
<%= image_tag item.thumb_image unless item.thumb_image.nil? %>
<%= link_to "Edit", edit_portfolio_path(item.id) %>
<% end %>
